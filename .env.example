# Anthropic API Key (Required for Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OpenAI API Key (Required for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: For media generation
REPLICATE_API_TOKEN=r8-your-replicate-token-here
ELEVENLABS_API_KEY=sk_your-elevenlabs-api-key-here

# Email service (for async chapter delivery)
RESEND_API_KEY=re_your-resend-api-key-here
EMAIL_DB_PATH=email_scheduler.db
SEND_WELCOME_EMAIL=false  # Set to true to send welcome emails
EMAIL_DEV_MODE=true  # true = send immediately, false = schedule for tomorrow 8am
ENABLE_EMAIL_SCHEDULER=true  # Enable background email processor

# Database configuration
DATABASE_URL=sqlite:///./story.db

# LangSmith tracing (optional but recommended)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=storyteller-app
LANGCHAIN_API_KEY=lsv2_pt_your-langsmith-api-key-here

# Story Configuration (2500-word chapters, 30-chapter arc)
DEFAULT_WORLD=west_haven
CHAPTER_TARGET_WORDS=2500
TOTAL_CHAPTERS=30
CREDITS_PER_NEW_USER=25
CREDITS_PER_CHOICE=1

# LLM Configuration (tuned for 2500-word chapters)
MODEL_NAME=claude-haiku-4-5-20251001  # Claude Haiku 4.5 supports up to 48K output tokens, fast and cost-effective
MAX_TOKENS=8000  # Increased from 4000 to prevent truncation of 2500-word chapters + JSON
TEMPERATURE=0.7

# Development settings
DEBUG=true
DEV_MODE=true
LOG_LEVEL=INFO
